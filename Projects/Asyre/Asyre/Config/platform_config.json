  "platforms": {
    "douyin": {
      "name": "抖音",
      "type": "short_video",
      "region": "china",

      "format": {
        "orientation": "vertical",
        "aspect_ratio": "9:16",
        "resolution": "1080x1920",
        "duration": {
          "min": 7,
          "optimal": [15, 30],
          "max": 60,
          "unit": "seconds"
        }
      },

      "algorithm": {
        "core_metric": "completion_rate",
        "traffic_pool_system": true,
        "cold_start_window_minutes": 30,
        "targets": {
          "completion_rate": {
            "pool_upgrade_threshold": 0.40,
            "excellent": 0.60,
            "description": "完播率 - 进入下一流量池的门槛"
          },
          "engagement_rate": {
            "pool_upgrade_threshold": 0.03,
            "excellent": 0.08,
            "description": "互动率 = (点赞+评论+分享)/曝光"
          },
          "replay_rate": {
            "weight": "high",
            "description": "重复播放权重极高"
          }
        },
        "ranking_factors": [
          {"factor": "completion_rate", "weight": 0.35},
          {"factor": "engagement_rate", "weight": 0.25},
          {"factor": "replay_rate", "weight": 0.20},
          {"factor": "follow_rate", "weight": 0.10},
          {"factor": "share_rate", "weight": 0.10}
        ]
      },

      "content_rules": {
        "hook": {
          "window_seconds": 3,
          "must_contain": ["conflict", "curiosity", "benefit"],
          "forbidden": ["大家好", "今天我们来聊", "众所周知"]
        },
        "structure": {
          "climax_interval_seconds": 15,
          "min_climax_count": 2,
          "pacing": "fast"
        },
        "engagement_triggers": {
          "controversy_point": true,
          "question_at_end": true,
          "deliberate_small_error": "optional"
        }
      },

      "transformation": {
        "from_master": {
          "extract": "highlight_clips",
          "max_clips": 5,
          "clip_selection": ["peak_emotion", "key_insight", "controversy"],
          "rewrite_hook": true,
          "add_visual_cues": true
        }
      },

      "publishing": {
        "best_times": ["12:00", "18:00", "21:00"],
        "timezone": "Asia/Shanghai",
        "frequency": "daily",
        "dou_plus_strategy": {
          "trigger": "cold_start_data_good_but_stuck",
          "avoid": ["cold_start_data_bad", "already_viral"]
        }
      },

      "seo": {
        "hashtag_count": [3, 5],
        "title_max_length": 55,
        "search_recommendation_weight": "increasing"
