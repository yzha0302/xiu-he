    "youtube": {
      "name": "YouTube",
      "type": "long_video",
      "region": "international",

      "format": {
        "orientation": "horizontal",
        "aspect_ratio": "16:9",
        "resolution": ["1920x1080", "3840x2160"],
        "duration": {
          "min": 300,
          "optimal": [480, 900],
          "max": null,
          "unit": "seconds"
        },
        "shorts": {
          "enabled": true,
          "duration": {"max": 60},
          "aspect_ratio": "9:16"
        }
      },

      "algorithm": {
        "core_metric": "watch_time",
        "description": "满意度预测机 - 预测用户满意度而非内容质量",
        "targets": {
          "watch_time": {
            "weight": "highest",
            "description": "用户观看视频的总时长"
          },
          "ctr": {
            "alert": {"below": 0.02},
            "healthy": [0.02, 0.10],
            "excellent": {"above": 0.10},
            "description": "缩略图被点击的概率"
          },
          "retention_rate": {
            "alert": {"below": 0.30},
            "healthy": [0.30, 0.50],
            "excellent": {"above": 0.50},
            "description": "观看完成的百分比"
          },
          "engagement_rate": {
            "alert": {"below": 0.01},
            "healthy": [0.01, 0.05],
            "excellent": {"above": 0.05}
          },
          "subscriber_conversion": {
            "alert": {"below": 0.005},
            "healthy": [0.005, 0.02],
            "excellent": {"above": 0.02}
          }
        },
        "ranking_factors": [
          {"factor": "watch_time", "weight": 0.35},
          {"factor": "ctr", "weight": 0.25},
          {"factor": "retention_rate", "weight": 0.20},
          {"factor": "engagement", "weight": 0.12},
          {"factor": "channel_authority", "weight": 0.08}
        ],
        "2024_updates": [
          "新频道快速测试(48小时)",
          "系列内容加权+30%",
          "多语言内容跨语言推荐",
          "Shorts与长视频协同"
        ]
      },

      "content_rules": {
        "hook": {
          "window_seconds": 30,
          "pattern": "promise_deliver_loop",
          "example": "0:00标题承诺→0:30兑现→2:00升级承诺→循环"
        },
        "structure": {
          "use_chapters": true,
          "retention_design": {
            "micro_climax_interval_seconds": 30,
            "no_safe_exit_point": true
          }
        },
        "thumbnail": {
          "face_ratio": 0.40,
          "expression": "exaggerated_emotion",
          "text_words_max": 3,
          "colors": ["yellow", "red", "cyan"],
          "contrast": "high"
        },
        "title": {
          "pattern": "[number/time] + [core_value] + [emotion/suspense]",
          "max_length": 60
        }
      },

      "seo": {
        "title_contains_keyword": true,
        "description_first_200_chars": "critical",
        "tags": [5, 15],
        "chapters_with_timestamps": true
      },

      "transformation": {
        "from_master": {
          "format": "full_with_chapters",
          "design_thumbnail": true,
          "optimize_title_seo": true,
          "add_retention_hooks": true,
          "extract_shorts": {
            "count": [3, 5],
            "selection": ["peak_moments", "key_insights"]
          }
        }
      },

      "publishing": {
        "best_times": ["weekend_afternoon"],
        "timezone": "target_audience",
        "frequency": "1-2_per_week"
      },

      "diagnostics": {
        "low_impressions": {
          "if_low_ctr": "optimize_thumbnail_title",
          "if_normal_ctr": "seo_issue"
        },
        "high_impressions_low_watch_time": {
          "early_drop": "hook_problem",
          "mid_drop": "pacing_problem",
          "end_drop": "acceptable"
        },
        "high_watch_time_slow_growth": {
          "cause": "low_engagement_sharing",
          "fix": "add_emotional_peaks"
        }
      }
    },

