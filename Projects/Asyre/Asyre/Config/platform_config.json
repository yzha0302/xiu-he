  "atomization_rules": {
    "description": "从核心版产出多平台内容的原子化规则",
    "pillar_to_atoms": {
      "golden_sentence_clips": {
        "target_platforms": ["douyin", "kuaishou", "instagram_reels"],
        "count": [3, 5],
        "duration": [15, 30],
        "selection_criteria": ["peak_emotion", "key_insight", "quotable"]
      },
      "image_text_breakdown": {
        "target_platforms": ["xiaohongshu", "wechat_article"],
        "format": "listicle",
        "extract": "actionable_steps"
      },
      "opinion_thread": {
        "target_platforms": ["twitter"],
        "format": "5-10_tweets",
        "extract": "core_argument_chain"
      },
      "deep_discussion": {
        "target_platforms": ["reddit", "zhihu"],
        "format": "discussion_post",
        "extract": "controversial_angle"
      },
      "full_version": {
        "target_platforms": ["youtube", "bilibili"],
        "format": "chaptered_video",
        "add": ["chapters", "retention_hooks"]
      }
    }
  },

  "quality_layer_mapping": {
    "description": "质量层在平台适配中的保留/调整规则",
    "T_layer": {
      "rule": "preserve",
      "description": "可信度层 - 所有平台必须保留"
    },
    "E_layer": {
      "rule": "preserve",
      "description": "经验层 - 核心价值不可删减"
    },
    "C_layer": {
      "rule": "preserve_or_simplify",
      "description": "深度层 - 短平台可简化但保留核心洞察"
    },
    "F_layer": {
      "rule": "adapt",
      "description": "受众层 - 根据平台用户画像调整"
    },
    "D_layer": {
      "rule": "adapt",
      "description": "表达层 - 根据平台调性调整"
    },
    "A_layer": {
      "rule": "rebuild",
