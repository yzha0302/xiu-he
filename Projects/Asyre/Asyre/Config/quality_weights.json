{
  "_comment": "Asyre Quality Weights System v2.4",
  "_version": "2.4",
  "_date": "2026-01-13",
  "_description": "三源权重系统 + 6个心理学新维度：峰终体验、记忆锚点、认知重构力、行动明确性、认知负荷曲线、情感极化指数",

  "_methodology": {
    "theory_based": {
      "source": "学术研究与理论框架",
      "basis": ["E-E-A-T", "STEPPS", "Information Literacy", "Attention Economy"],
      "update_frequency": "stable (理论相对稳定)",
      "confidence": "high"
    },
    "data_driven": {
      "source": "优秀案例反推与用户反馈",
      "method": "回归分析，从实际质量反推权重",
      "update_frequency": "continuous (持续学习)",
      "confidence": "medium → high (随样本量增加)"
    },
    "expert_tuned": {
      "source": "创作者的实践经验与直觉",
      "method": "手动调整，基于领域知识",
      "update_frequency": "on-demand (按需调整)",
      "confidence": "high (在特定领域)"
    }
  },

  "_weight_fusion": {
    "description": "三种权重来源的融合策略",
    "formula": "final_weight = α×theory + β×data + γ×expert",
    "default_fusion": {
      "theory_weight_α": 0.40,
      "data_weight_β": 0.30,
      "expert_weight_γ": 0.30
    },
    "adaptive_fusion": {
      "description": "根据样本量动态调整融合比例",
      "rule": "随着data样本增加，β增大，α减小"
    }
  },

  "_quality_model": {
    "model_type": "threshold_weighted",
    "formula": "Q = T_gate × Σ(wi × Fi)",
    "description": "门槛+加权模型，T层作为过滤器，其他因子加权求和",
    "components": {
      "T_gate": "T > threshold ? 1 : 0 (门槛函数)",
      "wi": "第i个因子的融合权重",
      "Fi": "第i个因子的得分",
      "constraint": "ΣwE + ΣwC + ΣwF + ΣwD + ΣwA + ΣwB = 1.0"
    }
  },

